<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>myproject</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>userloginServlet</servlet-name>
        <servlet-class>myproject.servlet.UserloginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>userloginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>usersignupServlet</servlet-name>
        <servlet-class>myproject.servlet.UsersignupServlet</servlet-class>
    </servlet>

     <servlet-mapping>
        <servlet-name>usersignupServlet</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>userDBServlet</servlet-name>
        <servlet-class>myproject.servlet.UserDBServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>userDBServlet</servlet-name>
        <url-pattern>/userDBServlet</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet>
        <servlet-name>userUpdataServlet</servlet-name>
        <servlet-class>myproject.servlet.UserUpdataServlet</servlet-class>
    </servlet>
    
     <servlet-mapping>
        <servlet-name>userUpdataServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    
      <servlet>
  	<servlet-name>insertRInfoServlet</servlet-name>
  	<servlet-class>myproject.servlet.insertRInfoServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>insertRInfoServlet</servlet-name>
  	<url-pattern>/recordAdd</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>deleteRServlet</servlet-name>
  	<servlet-class>myproject.servlet.deleteRInfoServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>deleteRServlet</servlet-name>
  	<url-pattern>/recordDelete</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>myproject.servlet.FileUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>VisualizePathServlet</servlet-name>
        <servlet-class>myproject.servlet.txtreaderservlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VisualizePathServlet</servlet-name>
        <url-pattern>/VisualizePathServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
